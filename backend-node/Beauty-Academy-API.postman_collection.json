{
  "info": {
    "name": "Beauty Academy API",
    "description": "Complete API collection for Beauty Academy backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Public Endpoints",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Submit Enrollment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"phone\": \"+91 9876543210\",\n  \"course\": \"Basic Beautician Course\",\n  \"courseFee\": \"15000\",\n  \"message\": \"I want to enroll in this course\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/enquiries",
              "host": ["{{base_url}}"],
              "path": ["enquiries"]
            }
          }
        },
        {
          "name": "Submit Contact Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Doe\",\n  \"email\": \"jane@example.com\",\n  \"phone\": \"+91 9876543210\",\n  \"course\": \"advanced-beautician\",\n  \"message\": \"I have some questions about the course\",\n  \"newsletter\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/contact",
              "host": ["{{base_url}}"],
              "path": ["contact"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.token) {",
                  "    pm.environment.set(\"auth_token\", jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userid\": \"admin\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Protected Endpoints",
      "item": [
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/me",
              "host": ["{{base_url}}"],
              "path": ["auth", "me"]
            }
          }
        },
        {
          "name": "Get All Enquiries",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/enquiries?page=1&limit=20",
              "host": ["{{base_url}}"],
              "path": ["enquiries"],
              "query": [
                {
                  "key": "status",
                  "value": "new",
                  "disabled": true
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Get Single Enquiry",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/enquiries/:id",
              "host": ["{{base_url}}"],
              "path": ["enquiries", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "ENQUIRY_ID_HERE"
                }
              ]
            }
          }
        },
        {
          "name": "Update Enquiry Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"contacted\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/enquiries/:id",
              "host": ["{{base_url}}"],
              "path": ["enquiries", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "ENQUIRY_ID_HERE"
                }
              ]
            }
          }
        },
        {
          "name": "Get All Contact Messages",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/contact?page=1&limit=20",
              "host": ["{{base_url}}"],
              "path": ["contact"],
              "query": [
                {
                  "key": "status",
                  "value": "new",
                  "disabled": true
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Get Single Contact Message",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/contact/:id",
              "host": ["{{base_url}}"],
              "path": ["contact", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "MESSAGE_ID_HERE"
                }
              ]
            }
          }
        },
        {
          "name": "Update Contact Message Status",
          "request": {
