            "url": {
              "raw": "{{base_url}}/contact/:id",
              "host": ["{{base_url}}"],
              "path": ["contact", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "MESSAGE_ID_HERE"
                }
              ]
            }
          }
        }
      ]
    },
